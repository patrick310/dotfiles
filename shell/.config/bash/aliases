# Common language shortcuts
alias p='pnpm'
alias c='cargo'

# Kubectl aliases
alias k='kubectl'
alias kns='kubectl config set-context --current --namespace'
alias kgp='kubectl get pods'
alias kgs='kubectl get svc'

# Flux aliases
alias fgk='flux get kustomizations'
alias fgh='flux get helmreleases'
alias fgs='flux get sources'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'
alias -- -='cd -'  # Go back

# Better ls
if command -v eza &>/dev/null; then
    # Modern eza aliases
    alias ls='eza --group-directories-first'
    alias ll='eza -la --icons --group-directories-first'
    alias la='eza -a'
    alias l='eza -F'
    alias lt='eza -la --sort=modified'
    alias tree='eza --tree'
    alias lsgit='eza -la --git --git-ignore'  # Show git status
    alias llm='eza -lbGd --header --git --sort=modified'  # Modified sort with header
    alias lla='eza -la --icons --header --git'  # Everything!
else
    # Traditional ls aliases  
    alias ls='ls --color=auto --group-directories-first'
    alias ll='ls -alFh'
    alias la='ls -A'
    alias l='ls -CF'
    alias lt='ls -laht'
fi

# Grep with color
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Quick edits
alias bashrc='${EDITOR} ~/.bashrc && source ~/.bashrc'
alias dots='cd ~/dotfiles'

# System
alias df='df -h'
alias du='du -h'
alias free='free -h'
alias ps='ps auxf'

# Git shortcuts
alias g='git'
alias gs='git status'
alias gd='git diff'
alias gl='git log --oneline --graph'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gpu='git pull'

# Safety
alias mkdir='mkdir -pv'  # Create parents, verbose
alias wget='wget -c'  # Resume by default
alias rm='rm -i'        
alias cp='cp -i'       
alias mv='mv -i'    


# Modern replacements (if installed)
if command -v bat &>/dev/null; then
    cat() {
        if [ -t 1 ]; then
            bat --paging=never --style=plain --decorations=never "$@"
        else
            command cat "$@"
        fi
    }
fi

if command -v rg &>/dev/null; then
    alias rgg='rg --hidden --glob "!.git"'
fi
